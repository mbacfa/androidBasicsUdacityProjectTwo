<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
        <item name="colorAccent">#FF9800</item>
    </style>

    <!-- textView theme. -->

    <style name="TeamName">
        <item name="android:fontFamily">#sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">@dimen/teamNameFontSize</item>
        <item name="android:padding">@dimen/teamNamePadding</item>
    </style>

    <style name="Score">
        <item name="android:fontFamily">#sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/scoreFontSize</item>
    </style>

    <style name="lowerButtons">
        <item name="android:layout_marginLeft">@dimen/marginAroundButtons</item>
        <item name="android:layout_marginRight">@dimen/marginAroundButtons</item>
        <item name="android:layout_marginTop">@dimen/marginBetweenButtons</item>
    </style>


    <style name="topButtons">
        <item name="android:layout_marginLeft">@dimen/marginAroundButtons</item>
        <item name="android:layout_marginRight">@dimen/marginAroundButtons</item>
        <item name="android:layout_marginTop">@dimen/marginAroundButtons</item>
    </style>

</resources>
